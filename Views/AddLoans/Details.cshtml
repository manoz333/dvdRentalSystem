@model DatabaseCoursework.Models.Loan

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>

    body {
        margin: 0;
        min-height: 100vh;
    }

    input[type=text], select {
      width: 100%;
      padding: 7px 13px;
      margin: 4px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }



    .custom-btn:hover {
        color: #fff !important;
        background-color: #11cdef;
        transition: all .3s linear;
    }

</style>
</head>
<body>

<div>
    <div style="display: flex; justify-content: space-between; align-items: center">
        <h4 class="custom-btn" style="font-size: 20px; 
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        margin-top: -5px;
        color: #11cdef; padding: .5rem; border: 2px solid #11cdef; margin: 1rem; text-decoration: none; border-radius: 1rem;
    ">Loan</h4>

          <div>
        <a asp-controller="DashBoard" asp-action="Index" class="custom-btn"
        style="padding: 1rem 2rem; border: 2px solid #11cdef; border-radius: 1rem; text-decoration: none; color: #11cdef">Back to Dashboard</a>

        <a class="custom-btn" asp-action="Index" style="padding: 1rem 2rem; border: 2px solid #11cdef; border-radius: 1rem; text-decoration: none; color: #11cdef">
            Back to List
         </a>
    </div>
    </div>

    <dl class="row" style="max-width: 500px; margin: 0 auto; box-shadow: 2px 2px 10px #11cdef; 
    background-image: linear-gradient(56deg, rgba(17, 205, 239, .3) 50%, transparent 50%);
font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
padding: 1rem; border-radius: 1em;
">
        <div style="display: flex; justify-content: space-around; align-items: center; margin-bottom: .7rem;">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateOut)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateOut)
            </dd>
        </div>

        <div style="display: flex; justify-content: space-around; align-items: center; margin-bottom: .7rem;">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateDue)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateDue)
            </dd>
        </div>

        <div style="display: flex; justify-content: space-around; align-items: center; margin-bottom: .7rem;">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateReturned)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateReturned)
            </dd>
        </div>

        <div style="display: flex; justify-content: space-around; align-items: center; margin-bottom: .7rem;">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.LoanType)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LoanType.LoanTypeNumber)
            </dd>
        </div>

        <div style="display: flex; justify-content: space-around; align-items: center; margin-bottom: .7rem;">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DVDCopy)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DVDCopy.CopyNumber)
            </dd>
        </div>

        <div style="display: flex; justify-content: space-around; align-items: center; margin-bottom: .7rem;">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Member)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Member.MemberNumber)
            </dd>
        </div>
    </dl>
</div>

</body>
</html>
