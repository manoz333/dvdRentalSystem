@model DatabaseCoursework.Models.Member

@{
    ViewData["Title"] = "Create";
}

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MembershipCategoryNumber" class="control-label my-2"></label>
                            <select asp-for="MembershipCategoryNumber" class ="form-control" asp-items="ViewBag.MembershipCategoryNumber"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberFirstName" class="control-label my-2"></label>
                            <input asp-for="MemberFirstName" class="form-control" />
                            <span asp-validation-for="MemberFirstName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                           <div class="form-group">
                                <label asp-for="MemberLastName" class="control-label my-2"></label>
                                <input asp-for="MemberLastName" class="form-control" />
                                <span asp-validation-for="MemberLastName" class="text-danger"></span>
                            </div>
                    </div>
                    <div class="col-md-6">
                         <div class="form-group">
                            <label asp-for="MemberAddress" class="control-label my-2"></label>
                            <input asp-for="MemberAddress" class="form-control" />
                            <span asp-validation-for="MemberAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MemberDateOfBirth" class="control-label my-2"></label>
                            <input asp-for="MemberDateOfBirth" class="form-control" />
                            <span asp-validation-for="MemberDateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group my-3">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>
                <div class="my-3">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>

            
            
            
           
            
            
        </form>
    </div>
</div>