    <table class="table" style="max-width: 1000px; margin-left: 380px; margin-top: 10px;">


        <thead style="border-bottom: 2px solid white;" >
            <tr>
                <th class="text-center" style="width: 25%">DVD Titles</th>
                <th class="text-center" style="width: 25%">Producer Name</th>
                <th class="text-center" style="width: 25%">Studio Name</th>
                <th class="text-center" style="width: 25%">Actor Name</th>
            </tr>
        </thead>

          
        <tbody >
            @foreach(var obj in Model)
            {
                <tr>
                    <td class="text-center" class="text-black-50" width="25%">@obj.dvdTitle</td>
                    <td class="text-center" class="text-black-50" width="25%">@obj.producerName</td>
                    <td class="text-center" class="text-black-50" width="25%">@obj.studioName</td>
                    <td class="text-center" class="text-black-50" width="25%">@obj.actorFirstName @obj.actorLastName</td>

                </tr>
            }
        </tbody>
    
    </table>
    

